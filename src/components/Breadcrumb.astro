---
import LucideIcon from './LucideIcon.jsx';
import SchemaOrg from './SchemaOrg.astro';

interface BreadcrumbItem {
  name: string;
  item: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Generate breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.item
  }))
};
---

<nav aria-label="Breadcrumb" class="py-4">
  <ol class="flex items-center space-x-2 text-sm">
    <li>
      <a href="/" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors">
        <LucideIcon name="home" className="w-4 h-4 mr-1" />
        Inicio
      </a>
    </li>
    {items.map((item, index) => (
      <li class="flex items-center" key={index}>
        <LucideIcon name="chevron-right" className="w-4 h-4 mx-2 text-gray-400 dark:text-gray-600" />
        {index === items.length - 1 ? (
          <span class="text-gray-900 dark:text-gray-100 font-medium" aria-current="page">
            {item.name}
          </span>
        ) : (
          <a 
            href={item.item} 
            class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors"
          >
            {item.name}
          </a>
        )}
      </li>
    ))}
  </ol>
</nav>

<SchemaOrg type="breadcrumb" data={breadcrumbSchema} />