---
import Layout from '../../layouts/Layout.astro';
import ServiceSchema from '../../components/ServiceSchema.astro';

const breadcrumbSchema = {
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [
		{ "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://subdominio.cl" },
		{ "@type": "ListItem", "position": 2, "name": "Servicios", "item": "https://subdominio.cl/servicios" },
		{ "@type": "ListItem", "position": 3, "name": "Automatización", "item": "https://subdominio.cl/servicios/automatizacion" }
	]
};

const serviceOffers = [
  { name: "Automatización con IA", description: "Inteligencia artificial para automatizar procesos" },
  { name: "Workflows Personalizados", description: "Flujos de trabajo automatizados a medida" },
  { name: "Integración de Sistemas", description: "Conectamos tus herramientas existentes" },
  { name: "Automatización de Reportes", description: "Informes y dashboards en tiempo real" }
];
---

<Layout title="Automatización de Procesos" description="Optimizamos tu negocio con tecnología de vanguardia y soluciones inteligentes. Automatización empresarial, IA y workflows personalizados.">
	<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
	<!-- Hero -->
	<section class="pt-32 lg:pt-40 pb-16 lg:pb-24 bg-white dark:bg-gray-900">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="max-w-4xl">
				<div class="flex items-center gap-4 mb-8">
					<a href="/servicios" class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500 hover:text-black dark:hover:text-white transition-colors duration-300">
						Servicios
					</a>
					<span class="text-gray-300 dark:text-gray-600">/</span>
					<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
						Automatización
					</span>
				</div>

				<h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-medium text-black dark:text-white leading-[1.1] mb-8">
					Automatización real, <span class="italic">resultados tangibles</span>
				</h1>

				<p class="text-lg lg:text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-2xl mb-10">
					Eliminamos tareas repetitivas y reducimos errores humanos con soluciones
					desarrolladas a medida, integradas en tus sistemas y con control total del código.
				</p>

				<div class="flex flex-col sm:flex-row items-start gap-6">
					<a href="/contacto" class="group inline-flex items-center gap-3 px-8 py-4 bg-black dark:bg-gray-200 text-white dark:text-black font-medium transition-all duration-300 hover:gap-5">
						<span>Solicitar consultoría</span>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Solutions -->
	<section class="py-24 lg:py-32 bg-gray-50 dark:bg-gray-950">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="grid lg:grid-cols-12 gap-12 lg:gap-8 mb-16">
				<div class="lg:col-span-4">
					<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
						Soluciones
					</span>
				</div>
				<div class="lg:col-span-8">
					<h2 class="font-display text-3xl lg:text-4xl font-medium text-black dark:text-white leading-tight">
						Automatización <span class="italic">personalizada</span>
					</h2>
				</div>
			</div>

			<div class="border-t border-gray-200 dark:border-gray-800">
				<div class="grid lg:grid-cols-12 gap-6 py-12 lg:py-16 border-b border-gray-200 dark:border-gray-800">
					<div class="lg:col-span-4">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Procesos empresariales</h3>
					</div>
					<div class="lg:col-span-7 lg:col-start-6">
						<p class="text-gray-600 dark:text-gray-400 leading-relaxed">
							Control de inventarios, facturación, reportes y flujos de aprobación integrados directamente en tu ERP o CRM.
						</p>
					</div>
				</div>

				<div class="grid lg:grid-cols-12 gap-6 py-12 lg:py-16 border-b border-gray-200 dark:border-gray-800">
					<div class="lg:col-span-4">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Contenido con IA</h3>
					</div>
					<div class="lg:col-span-7 lg:col-start-6">
						<p class="text-gray-600 dark:text-gray-400 leading-relaxed">
							Textos para productos, respuestas automáticas y optimización SEO adaptada a tu negocio.
						</p>
					</div>
				</div>

				<div class="grid lg:grid-cols-12 gap-6 py-12 lg:py-16 border-b border-gray-200 dark:border-gray-800">
					<div class="lg:col-span-4">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Integraciones complejas</h3>
					</div>
					<div class="lg:col-span-7 lg:col-start-6">
						<p class="text-gray-600 dark:text-gray-400 leading-relaxed">
							Conexión de plataformas ERP, CRM, logística, facturación electrónica vía API REST o GraphQL.
						</p>
					</div>
				</div>

				<div class="grid lg:grid-cols-12 gap-6 py-12 lg:py-16">
					<div class="lg:col-span-4">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Workflows operativos</h3>
					</div>
					<div class="lg:col-span-7 lg:col-start-6">
						<p class="text-gray-600 dark:text-gray-400 leading-relaxed">
							Procesos de notificación, control de estados y validaciones automáticas.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Cases -->
	<section class="py-24 lg:py-32 bg-white dark:bg-gray-900">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="grid lg:grid-cols-12 gap-12 lg:gap-8 mb-16">
				<div class="lg:col-span-4">
					<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
						Casos reales
					</span>
				</div>
				<div class="lg:col-span-8">
					<h2 class="font-display text-3xl lg:text-4xl font-medium text-black dark:text-white leading-tight">
						Transformaciones <span class="italic">concretas</span>
					</h2>
				</div>
			</div>

			<div class="grid md:grid-cols-3 gap-8">
				<div class="p-8 border border-gray-200 dark:border-gray-800">
					<span class="font-display text-4xl text-gray-200 dark:text-gray-800 font-medium">01</span>
					<h3 class="font-medium text-black dark:text-white mt-6 mb-3">Descripciones con IA</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400 mb-4">500 productos actualizados en 1 hora vs 125 horas de trabajo manual.</p>
					<p class="text-xs text-gray-500">Resultado: -99% tiempo</p>
				</div>

				<div class="p-8 border border-gray-200 dark:border-gray-800">
					<span class="font-display text-4xl text-gray-200 dark:text-gray-800 font-medium">02</span>
					<h3 class="font-medium text-black dark:text-white mt-6 mb-3">Reportes automáticos</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400 mb-4">Informes diarios sin intervención humana, enviados a las 9 AM sin falta.</p>
					<p class="text-xs text-gray-500">Resultado: 40h/mes liberadas</p>
				</div>

				<div class="p-8 border border-gray-200 dark:border-gray-800">
					<span class="font-display text-4xl text-gray-200 dark:text-gray-800 font-medium">03</span>
					<h3 class="font-medium text-black dark:text-white mt-6 mb-3">Sincronización stock</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400 mb-4">ERP, tienda y marketplace sincronizados en tiempo real. Cero sobreventa.</p>
					<p class="text-xs text-gray-500">Resultado: -95% reclamos</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Differentiators -->
	<section class="py-24 lg:py-32 bg-gray-50 dark:bg-gray-950">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="grid lg:grid-cols-12 gap-12 lg:gap-8 mb-16">
				<div class="lg:col-span-4">
					<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
						Diferenciadores
					</span>
				</div>
				<div class="lg:col-span-8">
					<h2 class="font-display text-3xl lg:text-4xl font-medium text-black dark:text-white leading-tight">
						¿Por qué <span class="italic">elegirnos?</span>
					</h2>
				</div>
			</div>

			<div class="grid sm:grid-cols-2 gap-8 lg:gap-12">
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Desarrollo 100% a medida</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Sin dependencias de plataformas externas.</p>
				</div>
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Integración nativa</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Con tus sistemas existentes.</p>
				</div>
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Optimización constante</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Basada en métricas y uso real.</p>
				</div>
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Soporte especializado</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Mantenimiento evolutivo incluido.</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Related -->
	<section class="py-24 lg:py-32 bg-white dark:bg-gray-900">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="mb-12">
				<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
					Servicios relacionados
				</span>
			</div>

			<div class="grid md:grid-cols-3 gap-px bg-gray-200 dark:bg-gray-800">
				<a href="/servicios/personalizado" class="group bg-white dark:bg-gray-900 p-8 lg:p-10 transition-colors duration-300 hover:bg-gray-50 dark:hover:bg-gray-800">
					<div class="flex items-start justify-between mb-6">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Software a medida</h3>
						<svg class="w-5 h-5 text-gray-300 group-hover:text-black dark:group-hover:text-white transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 17L17 7M17 7H7M17 7V17" />
						</svg>
					</div>
					<p class="text-sm text-gray-600 dark:text-gray-400">Sistemas con automatización integrada</p>
				</a>

				<a href="/servicios/ecommerce" class="group bg-white dark:bg-gray-900 p-8 lg:p-10 transition-colors duration-300 hover:bg-gray-50 dark:hover:bg-gray-800">
					<div class="flex items-start justify-between mb-6">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">E-commerce</h3>
						<svg class="w-5 h-5 text-gray-300 group-hover:text-black dark:group-hover:text-white transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 17L17 7M17 7H7M17 7V17" />
						</svg>
					</div>
					<p class="text-sm text-gray-600 dark:text-gray-400">Automatiza tu tienda online</p>
				</a>

				<a href="/servicios/web" class="group bg-white dark:bg-gray-900 p-8 lg:p-10 transition-colors duration-300 hover:bg-gray-50 dark:hover:bg-gray-800">
					<div class="flex items-start justify-between mb-6">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Desarrollo Web</h3>
						<svg class="w-5 h-5 text-gray-300 group-hover:text-black dark:group-hover:text-white transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 17L17 7M17 7H7M17 7V17" />
						</svg>
					</div>
					<p class="text-sm text-gray-600 dark:text-gray-400">Webs con funciones automatizadas</p>
				</a>
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="py-24 lg:py-32 bg-black dark:bg-gray-200">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="max-w-4xl">
				<h2 class="font-display text-3xl sm:text-4xl lg:text-5xl font-medium text-white dark:text-black leading-tight mb-6">
					La automatización debe adaptarse a tu <span class="italic">negocio</span>
				</h2>
				<p class="text-lg text-gray-400 dark:text-gray-600 mb-10 max-w-2xl">
					Diseñamos soluciones propias para que tu operación sea más rápida, segura y eficiente.
				</p>
				<div class="flex flex-col sm:flex-row items-start gap-6">
					<a href="/contacto" class="group inline-flex items-center gap-3 px-8 py-4 bg-white dark:bg-black text-black dark:text-white font-medium transition-all duration-300 hover:gap-5">
						<span>Comienza tu automatización</span>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
						</svg>
					</a>
					<a href="mailto:info@subdominio.cl" class="text-gray-500 hover:text-white dark:hover:text-black transition-colors duration-300">
						info@subdominio.cl
					</a>
				</div>
			</div>
		</div>
	</section>

	<ServiceSchema
		name="Automatización de Procesos"
		description="Optimizamos tu negocio con tecnología de vanguardia y soluciones inteligentes."
		category="Automatización Empresarial"
		offers={serviceOffers}
		url="https://subdominio.cl/servicios/automatizacion"
	/>
</Layout>
