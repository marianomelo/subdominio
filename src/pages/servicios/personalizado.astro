---
import Layout from '../../layouts/Layout.astro';
import ServiceSchema from '../../components/ServiceSchema.astro';

const breadcrumbSchema = {
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [
		{ "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://subdominio.cl" },
		{ "@type": "ListItem", "position": 2, "name": "Servicios", "item": "https://subdominio.cl/servicios" },
		{ "@type": "ListItem", "position": 3, "name": "Software a Medida", "item": "https://subdominio.cl/servicios/personalizado" }
	]
};

const serviceOffers = [
  { name: "Aplicaciones Web con Laravel", description: "Backend robusto y escalable" },
  { name: "Frontend con Next.js/React", description: "Interfaces de usuario modernas" },
  { name: "Sistemas Empresariales", description: "CRM, ERP y sistemas de gestión" },
  { name: "APIs y Microservicios", description: "Arquitecturas escalables" }
];
---

<Layout title="Desarrollo Personalizado" description="Creamos soluciones tecnológicas específicas para tu empresa. Backend con Laravel, frontend con Next.js, sistemas empresariales y integraciones.">
	<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
	<!-- Hero -->
	<section class="pt-32 lg:pt-40 pb-16 lg:pb-24 bg-white dark:bg-gray-900">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="max-w-4xl">
				<div class="flex items-center gap-4 mb-8">
					<a href="/servicios" class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500 hover:text-black dark:hover:text-white transition-colors duration-300">
						Servicios
					</a>
					<span class="text-gray-300 dark:text-gray-600">/</span>
					<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
						Software a medida
					</span>
				</div>

				<h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-medium text-black dark:text-white leading-[1.1] mb-8">
					Software que se adapta a tu <span class="italic">negocio</span>
				</h1>

				<p class="text-lg lg:text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-2xl mb-10">
					Desarrollamos aplicaciones y sistemas completamente personalizados que encajan
					con tus procesos únicos. Cada línea de código pensada para resolver tus desafíos.
				</p>

				<div class="flex flex-col sm:flex-row items-start gap-6">
					<a href="/contacto" class="group inline-flex items-center gap-3 px-8 py-4 bg-black dark:bg-gray-200 text-white dark:text-black font-medium transition-all duration-300 hover:gap-5">
						<span>Solicitar consultoría</span>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Types -->
	<section class="py-24 lg:py-32 bg-gray-50 dark:bg-gray-950">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="grid lg:grid-cols-12 gap-12 lg:gap-8 mb-16">
				<div class="lg:col-span-4">
					<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
						Tipos de aplicaciones
					</span>
				</div>
				<div class="lg:col-span-8">
					<h2 class="font-display text-3xl lg:text-4xl font-medium text-black dark:text-white leading-tight">
						Lo que <span class="italic">desarrollamos</span>
					</h2>
				</div>
			</div>

			<div class="border-t border-gray-200 dark:border-gray-800">
				<div class="grid lg:grid-cols-12 gap-6 py-12 lg:py-16 border-b border-gray-200 dark:border-gray-800">
					<div class="lg:col-span-4">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Sistemas de gestión</h3>
					</div>
					<div class="lg:col-span-7 lg:col-start-6">
						<p class="text-gray-600 dark:text-gray-400 leading-relaxed">
							CRM y ERP completamente personalizados. Centraliza clientes, inventarios, ventas y reportes en una sola plataforma.
						</p>
					</div>
				</div>

				<div class="grid lg:grid-cols-12 gap-6 py-12 lg:py-16 border-b border-gray-200 dark:border-gray-800">
					<div class="lg:col-span-4">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Aplicaciones web</h3>
					</div>
					<div class="lg:col-span-7 lg:col-start-6">
						<p class="text-gray-600 dark:text-gray-400 leading-relaxed">
							Dashboards avanzados, portales de clientes y herramientas colaborativas que funcionan como apps nativas.
						</p>
					</div>
				</div>

				<div class="grid lg:grid-cols-12 gap-6 py-12 lg:py-16 border-b border-gray-200 dark:border-gray-800">
					<div class="lg:col-span-4">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Integraciones</h3>
					</div>
					<div class="lg:col-span-7 lg:col-start-6">
						<p class="text-gray-600 dark:text-gray-400 leading-relaxed">
							APIs, middleware y sincronización entre sistemas. Eliminamos duplicación de datos y conectamos tu ecosistema.
						</p>
					</div>
				</div>

				<div class="grid lg:grid-cols-12 gap-6 py-12 lg:py-16">
					<div class="lg:col-span-4">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">PWA</h3>
					</div>
					<div class="lg:col-span-7 lg:col-start-6">
						<p class="text-gray-600 dark:text-gray-400 leading-relaxed">
							Apps que funcionan en cualquier dispositivo con capacidades offline y notificaciones push.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Examples -->
	<section class="py-24 lg:py-32 bg-white dark:bg-gray-900">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="grid lg:grid-cols-12 gap-12 lg:gap-8 mb-16">
				<div class="lg:col-span-4">
					<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
						Ejemplos
					</span>
				</div>
				<div class="lg:col-span-8">
					<h2 class="font-display text-3xl lg:text-4xl font-medium text-black dark:text-white leading-tight">
						Qué podemos construir <span class="italic">juntos</span>
					</h2>
				</div>
			</div>

			<div class="grid sm:grid-cols-2 gap-8">
				<div class="p-8 border border-gray-200 dark:border-gray-800">
					<h3 class="font-medium text-black dark:text-white mb-3">Sistemas de reservas</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">
						Calendario inteligente con disponibilidad automática, pagos integrados y recordatorios.
					</p>
				</div>

				<div class="p-8 border border-gray-200 dark:border-gray-800">
					<h3 class="font-medium text-black dark:text-white mb-3">Portales de clientes</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">
						Área privada para facturas, documentos, soporte y seguimiento de proyectos.
					</p>
				</div>

				<div class="p-8 border border-gray-200 dark:border-gray-800">
					<h3 class="font-medium text-black dark:text-white mb-3">Herramientas colaborativas</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">
						Gestión de tareas, documentos compartidos y workflows de aprobación.
					</p>
				</div>

				<div class="p-8 border border-gray-200 dark:border-gray-800">
					<h3 class="font-medium text-black dark:text-white mb-3">Sistemas de facturación</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">
						Facturas automáticas, cumplimiento fiscal e integración contable.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Differentiators -->
	<section class="py-24 lg:py-32 bg-gray-50 dark:bg-gray-950">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="grid lg:grid-cols-12 gap-12 lg:gap-8 mb-16">
				<div class="lg:col-span-4">
					<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
						Diferenciadores
					</span>
				</div>
				<div class="lg:col-span-8">
					<h2 class="font-display text-3xl lg:text-4xl font-medium text-black dark:text-white leading-tight">
						¿Por qué <span class="italic">elegirnos?</span>
					</h2>
				</div>
			</div>

			<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Desarrollo desde cero</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Sin plantillas ni adaptaciones forzadas.</p>
				</div>
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Escalabilidad real</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Arquitectura que crece con tu negocio.</p>
				</div>
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Código de calidad</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Testing automatizado y documentación completa.</p>
				</div>
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Propiedad total</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">El código es tuyo, sin dependencias.</p>
				</div>
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Soporte especializado</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Mantenimiento y evolución continua.</p>
				</div>
				<div>
					<h3 class="font-medium text-black dark:text-white mb-2">Integración nativa</h3>
					<p class="text-sm text-gray-600 dark:text-gray-400">Conecta con todos tus sistemas.</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Related -->
	<section class="py-24 lg:py-32 bg-white dark:bg-gray-900">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="mb-12">
				<span class="text-sm tracking-[0.2em] uppercase text-gray-400 dark:text-gray-500">
					Servicios relacionados
				</span>
			</div>

			<div class="grid md:grid-cols-3 gap-px bg-gray-200 dark:bg-gray-800">
				<a href="/servicios/automatizacion" class="group bg-white dark:bg-gray-900 p-8 lg:p-10 transition-colors duration-300 hover:bg-gray-50 dark:hover:bg-gray-800">
					<div class="flex items-start justify-between mb-6">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Automatización</h3>
						<svg class="w-5 h-5 text-gray-300 group-hover:text-black dark:group-hover:text-white transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 17L17 7M17 7H7M17 7V17" />
						</svg>
					</div>
					<p class="text-sm text-gray-600 dark:text-gray-400">Potencia tu software con IA</p>
				</a>

				<a href="/servicios/web" class="group bg-white dark:bg-gray-900 p-8 lg:p-10 transition-colors duration-300 hover:bg-gray-50 dark:hover:bg-gray-800">
					<div class="flex items-start justify-between mb-6">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">Desarrollo Web</h3>
						<svg class="w-5 h-5 text-gray-300 group-hover:text-black dark:group-hover:text-white transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 17L17 7M17 7H7M17 7V17" />
						</svg>
					</div>
					<p class="text-sm text-gray-600 dark:text-gray-400">Interfaz web para tu sistema</p>
				</a>

				<a href="/servicios/ecommerce" class="group bg-white dark:bg-gray-900 p-8 lg:p-10 transition-colors duration-300 hover:bg-gray-50 dark:hover:bg-gray-800">
					<div class="flex items-start justify-between mb-6">
						<h3 class="font-display text-xl font-medium text-black dark:text-white">E-commerce</h3>
						<svg class="w-5 h-5 text-gray-300 group-hover:text-black dark:group-hover:text-white transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 17L17 7M17 7H7M17 7V17" />
						</svg>
					</div>
					<p class="text-sm text-gray-600 dark:text-gray-400">E-commerce personalizado</p>
				</a>
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="py-24 lg:py-32 bg-black dark:bg-gray-200">
		<div class="container mx-auto px-6 lg:px-12">
			<div class="max-w-4xl">
				<h2 class="font-display text-3xl sm:text-4xl lg:text-5xl font-medium text-white dark:text-black leading-tight mb-6">
					Tu idea merece software que funcione <span class="italic">exactamente</span> como lo imaginas
				</h2>
				<p class="text-lg text-gray-400 dark:text-gray-600 mb-10 max-w-2xl">
					Sin limitaciones, sin adaptaciones. Solo la solución perfecta para tu negocio.
				</p>
				<div class="flex flex-col sm:flex-row items-start gap-6">
					<a href="/contacto" class="group inline-flex items-center gap-3 px-8 py-4 bg-white dark:bg-black text-black dark:text-white font-medium transition-all duration-300 hover:gap-5">
						<span>Comienza tu proyecto</span>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
						</svg>
					</a>
					<a href="mailto:info@subdominio.cl" class="text-gray-500 hover:text-white dark:hover:text-black transition-colors duration-300">
						info@subdominio.cl
					</a>
				</div>
			</div>
		</div>
	</section>

	<ServiceSchema
		name="Desarrollo Personalizado"
		description="Creamos soluciones tecnológicas específicas para tu empresa."
		category="Desarrollo de Software"
		offers={serviceOffers}
		url="https://subdominio.cl/servicios/personalizado"
	/>
</Layout>
