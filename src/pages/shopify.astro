		async function handleFormSubmit(event) {
			event.preventDefault();
			
			const form = event.target;
			const button = form.querySelector('button[type="submit"]');
			const originalText = button.innerHTML;
			
			// Obtener datos del formulario
			const formData = new FormData(form);
			const data = {
				nombre: formData.get('nombre') || '',
				empresa: formData.get('empresa') || '',
				email: formData.get('email') || '',
				telefono: formData.get('telefono') || '',
				servicio: 'ecommerce',
				tipoTienda: formData.get('tipoTienda') || '',
				mensaje: formData.get('mensaje') || '',
				landing: 'shopify'
			};
			
			// Validar campos requeridos
			if (!data.nombre.trim() || !data.email.trim() || !data.mensaje.trim()) {
				alert('Por favor completa todos los campos requeridos (Nombre, Email y Mensaje).');
				return;
			}
			
			// Cambiar estado del botón
			button.innerHTML = '<svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Enviando...';
			button.disabled = true;
			
			try {
				const response = await fetch('/api/contact', {
					method: 'POST',
					headers: { 'Content-Type': 'application/json' },
					body: JSON.stringify(data)
				});
				
				const result = await response.json();
				
				if (response.ok && result.success) {
					button.innerHTML = '✓ ¡Enviado! Te contactaremos pronto';
					button.className = button.className.replace('from-green-600 to-green-700', 'from-blue-600 to-blue-700');
					
					// Limpiar formulario
					form.reset();
					
					// Mostrar mensaje de éxito
					alert('¡Gracias! Hemos recibido tu solicitud. Te contactaremos en menos de 24 horas con tu cotización personalizada.');
					
					// Scroll suave al WhatsApp como opción alternativa
					setTimeout(() => {
						const whatsappSection = document.querySelector('a[href*="wa.me"]');
						if (whatsappSection) {
							whatsappSection.scrollIntoView({ behavior: 'smooth' });
						}
					}, 2000);
				} else {
					throw new Error(result.message || 'Error al enviar el formulario');
				}
			} catch (error) {
				console.error('Error:', error);
				button.innerHTML = '❌ Error - Intenta nuevamente';
				button.className = button.className.replace('from-green-600 to-green-700', 'from-red-600 to-red-700');
				alert('Hubo un error al enviar tu mensaje. Por favor intenta nuevamente o contáctanos directamente por WhatsApp.');
			}
			
			// Restaurar botón después de 5 segundos
			setTimeout(() => {
				button.innerHTML = originalText;
				button.disabled = false;
				button.className = 'w-full px-8 py-5 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-bold text-lg rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-[1.02] flex items-center justify-center gap-3';
			}, 5000);
		}
