					headers: { 'Content-Type': 'application/json' },
					body: JSON.stringify(formData)
				});

				const result = await response.json();
				
				if (response.ok && result.success) {
					submitMessage = result.message || '¬°Gracias por tu mensaje! Te contactaremos en las pr√≥ximas 24 horas.';
					showSuccessMessage(submitMessage);
					
					// Reset form data
					formData = {
						nombre: '',
						empresa: '',
						email: '',
						telefono: '',
						servicio: '',
						mensaje: '',
						referencia: '',
						acepto: false
					};
					errors = {};
					
					// Reset form UI
					form.reset();
					resetConsentToggle();
					updateCharCount();
					clearAllErrors();
					
				} else {
					submitMessage = result.message || 'Hubo un error al enviar tu mensaje. Por favor intenta nuevamente.';
					showErrorMessage(submitMessage);
				}
			} catch (error) {
				console.error('Error submitting form:', error);
				submitMessage = 'Hubo un error al enviar tu mensaje. Por favor intenta nuevamente o cont√°ctanos directamente a info@subdominio.cl';
				showErrorMessage(submitMessage);
			} finally {
				isSubmitting = false;
				// Restore button after delay
				setTimeout(() => {
					button.innerHTML = originalText;
					button.disabled = false;
				}, 3000);
			}
		}

		function resetConsentToggle() {
			const toggle = document.getElementById('acepto-toggle');
			const slider = document.getElementById('acepto-slider');
			const hiddenInput = document.getElementById('acepto');
			
			toggle.setAttribute('aria-checked', 'false');
			hiddenInput.value = 'false';
			toggle.classList.remove('bg-black', 'dark:bg-white');
			toggle.classList.add('bg-gray-300', 'dark:bg-gray-600');
			slider.classList.remove('translate-x-6');
			slider.classList.add('translate-x-1');
		}

		// Validation function matching React ContactForm exactly
		function validate() {
			const newErrors = {};

			// Validate nombre (same as ContactForm)
			if (!formData.nombre.trim()) {
				newErrors.nombre = 'El nombre es requerido';
			} else if (formData.nombre.length < 2) {
				newErrors.nombre = 'El nombre debe tener al menos 2 caracteres';
			}

			// Validate email (same as ContactForm)
			if (!formData.email.trim()) {
				newErrors.email = 'El email es requerido';
			} else if (!validateEmail(formData.email)) {
				newErrors.email = 'Por favor ingresa un email v√°lido';
			}

			// Validate telefono (same as ContactForm)
			if (formData.telefono && !validatePhone(formData.telefono)) {
				newErrors.telefono = 'Por favor ingresa un n√∫mero de tel√©fono v√°lido (ej: +56 9 1234 5678)';
			}

			// Validate servicio (same as ContactForm)
			if (!formData.servicio) {
				newErrors.servicio = 'Por favor selecciona un tipo de proyecto';
			}

			// Validate mensaje (same as ContactForm)
			if (!formData.mensaje.trim()) {
				newErrors.mensaje = 'Por favor describe tu proyecto';
			} else if (formData.mensaje.length < 20) {
				newErrors.mensaje = 'La descripci√≥n debe tener al menos 20 caracteres';
			}

			// Validate acepto (same as ContactForm)
			if (!formData.acepto) {
				newErrors.acepto = 'Debes aceptar el tratamiento de datos';
			}

			return newErrors;
		}

		function validateEmail(email) {
			const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
			return regex.test(email);
		}

		function validatePhone(phone) {
			// Accepts formats: +569XXXXXXXX, 9XXXXXXXX, with or without spaces
			const cleanPhone = phone.replace(/\s+/g, '').replace(/[()-]/g, '');
			const regex = /^(\+?56)?9\d{8}$/;
			return regex.test(cleanPhone) || cleanPhone === '';
		}

		function showFormErrors(errors) {
			// Clear previous errors first
			clearAllErrors();
			
			Object.keys(errors).forEach(fieldName => {
				const field = document.getElementById(fieldName);
				if (field) {
					// Add error class to field (similar to React ContactForm)
					field.classList.remove('border-gray-300', 'dark:border-gray-600');
					field.classList.add('border-red-500');
					
					// Create and show error message
					const errorP = document.createElement('p');
					errorP.className = 'mt-1 text-sm text-red-500';
					errorP.textContent = errors[fieldName];
					errorP.setAttribute('data-error-for', fieldName);
					
					// Insert error after the field
					field.parentNode.insertBefore(errorP, field.nextSibling);
				}
			});
		}

		function clearFieldError(fieldName) {
			const field = document.getElementById(fieldName);
			if (field) {
				// Remove error styling
				field.classList.remove('border-red-500');
				field.classList.add('border-gray-300', 'dark:border-gray-600');
				
				// Remove error message
				const errorMsg = field.parentNode.querySelector(`[data-error-for="${fieldName}"]`);
				if (errorMsg) {
					errorMsg.remove();
				}
			}
		}

		function clearAllErrors() {
			// Remove all error classes
			const errorFields = document.querySelectorAll('.border-red-500');
			errorFields.forEach(field => {
				field.classList.remove('border-red-500');
				field.classList.add('border-gray-300', 'dark:border-gray-600');
			});
			
			// Remove all error messages
			const errorMessages = document.querySelectorAll('[data-error-for]');
			errorMessages.forEach(msg => msg.remove());
			
			// Remove submit messages
			removeStatusMessages();
		}

		function showSuccessMessage(message) {
			removeStatusMessages();
			
			const successDiv = document.createElement('div');
			successDiv.className = 'submit-message p-4 rounded-lg text-sm bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 border border-green-200 dark:border-green-800 mt-6';
			successDiv.textContent = message;
			
			// Insert after form
			const form = document.querySelector('form');
			form.parentNode.insertBefore(successDiv, form.nextSibling);
		}

		function showErrorMessage(message) {
			removeStatusMessages();
			
			const errorDiv = document.createElement('div');
			errorDiv.className = 'submit-message p-4 rounded-lg text-sm bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 border border-red-200 dark:border-red-800 mt-6';
			errorDiv.textContent = message;
			
			// Insert after form
			const form = document.querySelector('form');
			form.parentNode.insertBefore(errorDiv, form.nextSibling);
		}

		function removeStatusMessages() {
			const messages = document.querySelectorAll('.submit-message');
			messages.forEach(msg => msg.remove());
		}

		// Initialize form when DOM is ready
		document.addEventListener('DOMContentLoaded', function() {
			initializeForm();
		});
		
		// Scroll suave para todos los enlaces internos
		document.addEventListener('DOMContentLoaded', function() {
			const internalLinks = document.querySelectorAll('a[href^="#"]');
			internalLinks.forEach(link => {
				link.addEventListener('click', function(e) {
					e.preventDefault();
					const targetId = this.getAttribute('href').substring(1);
					const targetElement = document.getElementById(targetId);
					if (targetElement) {
						targetElement.scrollIntoView({ behavior: 'smooth' });
					}
				});
			});
		});
	</script>
