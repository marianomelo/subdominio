							showConsentToggle={true}
							fields={{
								hideServicio: true,
								config: {
									mensaje: {
										label: 'Cuéntanos sobre tu WordPress',
										type: 'textarea',
										required: true,
										placeholder: 'Describe los problemas de tu WordPress: lentitud, problemas SEO, seguridad, móviles, etc.',
										rows: 5
									}
								},
								additionalFields: {
									url: {
										label: 'URL de tu sitio WordPress',
										type: 'url',
										placeholder: 'https://tusitio.cl',
										required: true
									},
									problemas: {
										label: 'Principales problemas detectados',
										type: 'select',
										placeholder: 'Selecciona el principal problema',
										multiple: true,
										options: [
